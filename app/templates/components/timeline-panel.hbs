<a class='timeline-link' href={{experience.url}} target="_new">
  <div class='timeline-dot'></div>
  <div class='timeline-panel'>
    <span class='timeline-dates'>{{experience.dates}}</span>

    <div class='title-bar blue without-margin'>
      {{experience.name}}

      {{#if experience.title}}
        ({{experience.title}})
      {{/if}}
    </div>

    {{#if experience.image}}
      <img src={{experience.image}}  />
    {{/if}}

    <p>
      {{#if experience.url}}
        <span class='timeline-url'>
          {{experience.url}}
        </span>
      {{/if}}

      <ul>
        {{#each experience.description as |descriptionItem|}}
          <li>{{descriptionItem}}</li>
        {{/each}}
      </ul>
    </p>
  </div>
</a>
